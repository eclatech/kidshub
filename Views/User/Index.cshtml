@using Eclatech.KidsHub.Common
@model IEnumerable<Eclatech.KidsHub.Objects.UserProfile>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of all  Users</h2>

<table class="table table-striped">
    <tr>
        <th>#</th>
        <th>User Email</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Registered Date</th>
        <th>Is Active</th>
        <th>Actions</th>
    </tr>
    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.UserEmail)
                </td>
                <td>
                    @Html.DisplayFor(m => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(m => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(m => item.CreatedDate)
                </td>
                <td>
                    @Html.DisplayFor(m => item.IsActive)
                </td>
                <td>
                    @Html.ActionLink("Edit User","EditUser",new { userId = item.Id.EncryptInteger() }, new Dictionary<string,object>
                                                                                          {
                                                                                              {"class","btn btn-xs"}
                                                                                          })
                </td>
            </tr>
        }
    }
</table>
