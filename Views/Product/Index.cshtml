@model  IEnumerable<Eclatech.KidsHub.Objects.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of all Students</h2>
<table style="padding: 10px; font-size: 16px;" cellpadding="10px" cellspacing="15px">
    <tr>
        <th>Product Name
        </th>
        <th>Price
        </th>

    </tr>
    @{
        if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td></td>
        </tr>
            }
        }
    }
</table>
